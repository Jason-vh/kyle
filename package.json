{
	"name": "kyle",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"start": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"slack:send": "bun run src/scripts/sendSlackEvent.ts",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop kyle",
		"pm2:restart": "pm2 restart kyle",
		"pm2:logs": "pm2 logs kyle",
		"pm2:status": "pm2 status",
		"deploy": "bun run build && pm2 restart kyle",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@types/bun": "^1.2.22",
		"@types/node": "^24.5.2",
		"drizzle-kit": "^0.31.8",
		"typescript": "^5.5.2"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^2.0.17",
		"@ai-sdk/openai": "^2.0.32",
		"@axiomhq/js": "^1.3.1",
		"@axiomhq/logging": "^0.1.4",
		"ai": "^5.0.45",
		"drizzle-orm": "^0.45.0",
		"zod": "^3.25.76"
	}
}
